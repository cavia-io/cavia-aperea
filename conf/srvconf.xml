<?xml version="1.0" encoding="UTF-8"?>
<testagent>
    <definitions>
        <str id="AMQP_URL">amqp://guest:guest@localhost:5672</str>
    </definitions>

    <sqlalchemy url="sqlite:///srv.db"/>
    <webapp>
        <listen port="17179" host="0.0.0.0" />
    </webapp>
    <workers>
        <cleanup-worker interval="86400"/>
        <execute-worker interval="8" recover="false">
            <listeners>
                <listener class="ngta.TestRunnerLogAmqpInterceptor">
                    <constructor-arg name="url" ref="AMQP_URL"/>
                    <constructor-arg name="exchange_name" value="aperea.logging"/>
                    <constructor-arg name="exchange_type" value="direct"/>
                </listener>
                <listener class="ngta.TestRecordAmqpInterceptor">
                    <constructor-arg name="url" ref="AMQP_URL"/>
                    <constructor-arg name="queue_name" value="aperea.record"/>
                </listener>
            </listeners>
        </execute-worker>
    </workers>
</testagent>